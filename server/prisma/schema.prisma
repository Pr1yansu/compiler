generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  email             String              @unique
  googleId          String?
  githubId          String?
  image             String?
  name              String
  password          String?
  role              Role                @default(USER)
  createdAt         DateTime            @default(now())
  AdminVerification AdminVerification[]
  Submission        Submission[]
}

model AdminVerification {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @map("_userId") @db.ObjectId
  user      User      @relation(fields: [userId], references: [id])
  token     String
  expiresAt DateTime?
  createdAt DateTime  @default(now())
}

model codingProblem {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  difficulty  Difficulty
  answer      String
  tags        String[]
  createdAt   DateTime     @default(now())
  Submission  Submission[]
}

model Submission {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  userId    String        @map("_userId") @db.ObjectId
  user      User          @relation(fields: [userId], references: [id])
  problemId String        @map("_problemId") @db.ObjectId
  problem   codingProblem @relation(fields: [problemId], references: [id])
  code      String
  output    Output[]
  language  Language
  status    Status
  createdAt DateTime      @default(now())
}

model Output {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  submission   Submission @relation(fields: [submissionId], references: [id])
  submissionId String     @map("_submissionId") @db.ObjectId
  output       String
  createdAt    DateTime   @default(now())
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  C
  CPP
}

enum Status {
  PENDING
  ACCEPTED
  REJECTED
}

enum Role {
  ADMIN
  USER
}
