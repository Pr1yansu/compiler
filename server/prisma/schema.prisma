generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(auto()) @map("_id") @db.ObjectId
  email             String              @unique
  googleId          String?
  githubId          String?
  image             String?
  name              String
  password          String?
  role              Role                @default(USER)
  createdAt         DateTime            @default(now())
  AdminVerification AdminVerification[]
  Submission        Submission[]
  Statistic         Statistic[]
}

model AdminVerification {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @map("_userId") @db.ObjectId
  user      User      @relation(fields: [userId], references: [id])
  token     String
  expiresAt DateTime?
  createdAt DateTime  @default(now())
}

model codingProblem {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  difficulty  Difficulty
  tags        String[]
  createdAt   DateTime     @default(now())
  Submission  Submission[]
  Statistic   Statistic?   @relation(fields: [statisticId], references: [id])
  statisticId String?      @db.ObjectId
  TestCase    TestCase[]
}

model TestCase {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  problemId String        @map("_problemId") @db.ObjectId
  problem   codingProblem @relation(fields: [problemId], references: [id])
  input     String
  output    String
  createdAt DateTime      @default(now())
}

model Submission {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  userId    String        @map("_userId") @db.ObjectId
  user      User          @relation(fields: [userId], references: [id])
  problemId String        @map("_problemId") @db.ObjectId
  problem   codingProblem @relation(fields: [problemId], references: [id])
  code      String
  language  Language
  status    Status
  createdAt DateTime      @default(now())
}

model Statistic {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  userId    String          @map("_userId") @db.ObjectId
  user      User            @relation(fields: [userId], references: [id])
  problems  codingProblem[]
  solved    Int
  attempted Int
  createdAt DateTime        @default(now())
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum Language {
  JAVASCRIPT
  PYTHON
  JAVA
  C
  CPP
}

enum Status {
  PENDING
  ACCEPTED
  REJECTED
}

enum Role {
  ADMIN
  USER
}
